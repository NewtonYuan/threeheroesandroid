<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HeroesActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/groundtile2"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="0dp" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="131dp"
                android:layout_height="140dp"
                android:layout_marginStart="53dp"
                android:layout_marginTop="204dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:onClick="character1ButtonClick"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/damageidle" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="131dp"
                android:layout_height="140dp"
                android:layout_marginStart="43dp"
                android:layout_marginTop="204dp"
                android:layout_marginEnd="53dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:onClick="character2ButtonClick"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageView"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/healer" />

            <ImageView
                android:id="@+id/perla"
                android:layout_width="131dp"
                android:layout_height="140dp"
                android:layout_marginStart="43dp"
                android:layout_marginTop="380dp"
                android:layout_marginEnd="53dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:onClick="perlaButtonClick"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageView3"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/perla" />

            <ImageView
                android:id="@+id/erina"
                android:layout_width="131dp"
                android:layout_height="140dp"
                android:layout_marginStart="44dp"
                android:layout_marginTop="556dp"
                android:layout_marginEnd="53dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:onClick="erinaButtonClick"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/alfred"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/erina" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="131dp"
                android:layout_height="140dp"
                android:layout_marginStart="53dp"
                android:layout_marginTop="380dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:onClick="character3ButtonClick"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/tank" />

            <ImageView
                android:id="@+id/alfred"
                android:layout_width="131dp"
                android:layout_height="140dp"
                android:layout_marginStart="52dp"
                android:layout_marginTop="556dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:onClick="alfredButtonClick"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/alfred" />

            <TextView
                android:id="@+id/recordsTitle"
                android:layout_width="305dp"
                android:layout_height="114dp"
                android:layout_marginTop="46dp"
                android:fontFamily="@font/customfont"
                android:text="Collected\nHeroes"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="40dp"
                app:layout_constraintEnd_toStartOf="@+id/background"
                app:layout_constraintStart_toEndOf="@+id/background"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/subtitleRecords"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="149dp"
                android:fontFamily="@font/customfont"
                android:text="Click on any hero to view details"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20dp"
                app:layout_constraintEnd_toStartOf="@+id/recordsTitle"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/recordsTitle"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/subtitleRecords2"
                android:layout_width="65dp"
                android:layout_height="46dp"
                android:layout_marginTop="77dp"
                android:layout_marginEnd="53dp"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/customfont"
                android:foreground="?android:attr/selectableItemBackground"
                android:onClick="recheckHeroesClick"
                android:text="Recheck\nHeroes"
                android:textAlignment="center"
                android:textColor="@color/gray"
                android:textSize="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="85dp"
                android:layout_height="41dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="28dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:onClick="backButtonClick"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/backarrow" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>




</androidx.constraintlayout.widget.ConstraintLayout>